#include <iostream>

using namespace std;

int compute_check_digit(int arr[], int size){
    
    int cont = 0;
    int cont2 = 2;
    int check_digit;
    //first step
    for (int i = size - 1; i >= 0; i = i - 2 ){
        cont += arr[i];
    };
    //Second step
    cont*=3;

    for (int i = size - 2; i >= 0 ; i = i - 2 ){
            cont2 += arr[i];
    };
    cout << cont2;
    cout << cont;
    cout <<endl;


    //third step
    for (int i = size - 2; i >= 0 ; i = i - 2 ){
        cont2 += arr[i];
};
    
    //fourth step
    int cont3 = cont + cont2;
    check_digit = 10 - (cont3 % 10);
    
    
    if(cont3 % 10 == 0)
        check_digit = 0;
    
    return check_digit;
    }

int main(){

int choice;
int product;

cout << "\n";
cout << "Check Digit Calculator \n";
cout <<"-------------------------- \n";
cout << "1. EAN-8 \n";
cout << "2. UPC-A \n";
cout << "3. EAN-13 \n";
cout << "4. EAN-14 \n";
cout << "5. SSCC \n";
cout << "-------------------------- \n";
cout << "Chose your product code type: ";
cin >> choice;
cout << endl;
int size = 8;
if (choice == 1){
//EAN-8
}
if (choice == 2){
//UPC-A
    size++;
}
if (choice == 3){
//EAN-13
size = 13;
}
if (choice == 4){
//EAN-14
size = 14;
}
if (choice == 5){
//SSCC
size = 18;
}
int arr[size];

cout << "Enter first";
cout << size;
cout << "digits of your product code: ";
cin >> product;
cout << endl;
//  store input from user to array
for (int g = 0; g < size; g++) {
  cin >> arr[g];
}

cout << "The numbers are: ";

//  print array elements
for (int h = 0; h < size; h++) {
  cout << arr[h];
}
cout << endl;
cout << compute_check_digit(arr, size);
cout << endl;

return 0;
}
