#include <iostream>

using namespace std;

int compute_check_digit(int arr[], int size){
    
    int cont = 0;
    //first step
    for (int i = size - 1; i >= 0 ; i = i - 2 ){
        cont += arr[i];
    }
    //Second step
cont*=3;
cout << cont;
cout <<endl;

return 0;
}
    //third step
    
    
    //fourth step
    
int main(){

int choice;
int product;

cout << "\n";
