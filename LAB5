//raplace the x = 18
int NEXT_CHAPTER;
   
int get_next_number(){
        if(NEXT_CHAPTER == 0)
        {
            NEXT_CHAPTER = 18;
            return NEXT_CHAPTER--;
        }
        return NEXT_CHAPTER--;
}


int main() {
    
